{
  "name": "vscode-buildgraph",
  "displayName": "vscode-buildgraph",
  "description": "buildgraph utils for vscode",
  "version": "0.0.4",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/AaronAlluyn/VsCodeBuildGraph"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-buildgraph.runListOnly",
        "title": "Run BuildGraph (ListOnly)"
      },
      {
        "command": "vscode-buildgraph.runTarget",
        "title": "Run BuildGraph Target"
      },
      {
        "command": "vscode-buildgraph.copyUatCommandline",
        "title": "Copy UAT commandline"
      }
    ],
    "submenus": [
      {
        "id": "buildgraph.context.submenu",
        "label": "BuildGraph"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == xml",
          "submenu": "buildgraph.context.submenu",
          "group": "navigation"
        }
      ],
      "buildgraph.context.submenu": [
        {
          "command": "vscode-buildgraph.runListOnly",
          "group": "1_run@1"
        },
        {
          "command": "vscode-buildgraph.runTarget",
          "group": "1_run@2"
        },
        {
          "command": "vscode-buildgraph.copyUatCommandline",
          "group": "2_copy@1"
        }
      ]
    },
    "semanticTokenTypes": [
      {
        "id": "buildGraphVariable",
        "superType": "variable",
        "description": "A $(Variable) in a BuildGraph file."
      },
      {
        "id": "buildGraphTag",
        "superType": "macro",
        "description": "A #Tag in a BuildGraph file."
      }
    ],
    "configurationDefaults": {
            "editor.semanticTokenColorCustomizations": {
                "rules": {
                    "buildGraphVariable": "#cb7d7b",
                    "buildGraphTag": "#cb7d7b"
                }
            }
        }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0"
  }
}
